<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos de red -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permisos biom칠tricos -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <!-- Permisos de ubicaci칩n -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Permisos de c치mara -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- 游댳 CARACTER칈STICAS DE HARDWARE NECESARIAS -->
    <!-- C치mara principal -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <!-- Autofocus (opcional pero recomendado) -->
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <!-- C치mara trasera (opcional) -->
    <uses-feature
        android:name="android.hardware.camera.back"
        android:required="false" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="MEGACERO S.R.L."
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Metalesgalvanizadosapp"
        tools:targetApi="31">

        <!-- 游댳 META-DATA PARA ML KIT (Importante) -->
        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="ocr" />

        <!-- Activity de NotaVenta -->
        <activity
            android:name=".NotaVenta"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Activity de Cotizaci칩n -->
        <activity
            android:name=".CotizacionActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Pantalla de Carga -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Mapa -->
        <activity
            android:name=".MapActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Dashboard Main -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Meta-data para fuentes -->
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>
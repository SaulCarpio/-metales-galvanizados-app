<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/bs_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Quieres buscar la mejor ruta para este punto?"
        android:textSize="16sp"
        android:textColor="#000000"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/bs_user_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tu ubicación aparecerá aquí"
        android:textSize="14sp"
        android:textColor="#444444"
        android:padding="8dp"/>

    <Button
        android:id="@+id/bs_btn_buscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar ruta"
        android:backgroundTint="#2196F3"
        android:textColor="@android:color/white"
        android:layout_marginTop="12dp"/>
</LinearLayout>
